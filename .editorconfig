root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 90

# kinda try to keep in sync with .scalafmt
[*.scala]
indent_size = 3
indent_style = space
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
